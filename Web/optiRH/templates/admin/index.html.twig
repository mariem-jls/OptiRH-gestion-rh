                        <thead>
                            <tr>
                                <th>Projet</th>
                                <th>Progression</th>
                                <th class="text-center">Missions Terminées</th>
                                <th class="text-center">Total Missions</th>
                                <th class="text-center">Statut</th>
                            </tr>
