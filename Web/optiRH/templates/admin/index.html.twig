                        nodeStyle = ':::progress';
                    } else {
                        nodeStyle = ':::start';
                    }
                    
                    mermaidDefinition += `${nodeId}["${project.name}<br>(${project.completion}%)"]${nodeStyle}`;
                    
                    if (i < projectsData.length - 1) {
                        mermaidDefinition += ' --> ';
                    } else {
                        mermaidDefinition += ' --> End([Fin])';
                    }
