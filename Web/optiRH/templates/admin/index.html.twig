{% block javascript %}
    {{ parent() }}
    <!-- Chargement des bibliothèques dans le bon ordre -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/raphael@2.3.0/raphael.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/morris.js@0.5.1/morris.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://www.gstatic.com/charts/loader.js"></script>

    <script>
        // Initialisation de Google Charts
        google.charts.load('current', {'packages':['corechart', 'bar']});
        
        // Fonction pour vérifier si un élément existe et contient des données
        function hasData(data) {
            return data && Array.isArray(data) && data.length > 0;
        }

        // Fonction pour initialiser les graphiques Google
        function initGoogleCharts() {
            console.log('Initialisation des graphiques Google');
            
            // Graphique de statut des réclamations
            if (document.getElementById('statusChart')) {
                const data = google.visualization.arrayToDataTable({{ statusDataJson|raw }});
                const options = {
                    pieHole: 0.4,
                    colors: ['#f39c12', '#3498db', '#2ecc71'],
                    chartArea: {width: '90%', height: '80%'},
                    legend: {position: 'right'},
                    pieSliceText: 'percentage',
                    sliceVisibilityThreshold: 0.05
                };
                const chart = new google.visualization.PieChart(document.getElementById('statusChart'));
                chart.draw(data, options);
            }
            
            // Graphique de sentiment des réclamations
            if (document.getElementById('sentimentChart')) {
                const data = google.visualization.arrayToDataTable({{ sentimentDataJson|raw }});
                const options = {
                    pieHole: 0.4,
                    colors: ['#2ecc71', '#f39c12', '#e74c3c'],
                    chartArea: {width: '90%', height: '80%'},
                    legend: {position: 'right'},
                    pieSliceText: 'percentage',
                    sliceVisibilityThreshold: 0.05
                };
                const chart = new google.visualization.PieChart(document.getElementById('sentimentChart'));
                chart.draw(data, options);
            }
            
            // Graphique de type des réclamations
            if (document.getElementById('typeChart')) {
                const data = google.visualization.arrayToDataTable({{ typeDataJson|raw }});
                const options = {
                    chartArea: {width: '80%', height: '70%'},
                    legend: {position: 'none'},
                    hAxis: {
                        minValue: 0,
                    },
                    vAxis: {
                        title: 'Type de réclamation'
                    },
                    bars: 'horizontal',
                    colors: ['#3498db']
                };
                const chart = new google.visualization.BarChart(document.getElementById('typeChart'));
                chart.draw(data, options);
            }
            
            // Graphique d'évolution des réclamations
            if (document.getElementById('timelineChart')) {
                const data = google.visualization.arrayToDataTable({{ timelineDataJson|raw }});
                const options = {
                    chartArea: {width: '80%', height: '70%'},
                    legend: {position: 'none'},
                    colors: ['#3498db'],
                    hAxis: {
                        title: 'Temps (minute)',
                        slantedText: true,
                        slantedTextAngle: 45
                    },
                    vAxis: {
                        title: 'Nombre de réclamations',
                        minValue: 0
                    }
                };
                const chart = new google.visualization.LineChart(document.getElementById('timelineChart'));
                chart.draw(data, options);
            }
            
            // Graphique croisé Type x Sentiment
            if (document.getElementById('typeSentimentChart')) {
                // Créer les données croisées à partir des données existantes
                const typeData = {{ typeDataJson|raw }};
                const sentimentData = {{ sentimentDataJson|raw }};
                
                // Préparer le tableau de données croisées
                const crossData = [['Type', 'Positif', 'Neutre', 'Négatif']];
                
                // Extraire les types uniques (en ignorant l'en-tête)
                const types = typeData.slice(1).map(row => row[0]);
                
                // Pour chaque type, calculer la répartition des sentiments
                types.forEach(type => {
                    // Distribution égale des sentiments pour chaque type
                    const total = typeData.find(row => row[0] === type)[1];
                    const perSentiment = Math.round(total / 3);
                    crossData.push([type, perSentiment, perSentiment, perSentiment]);
                });

                const data = google.visualization.arrayToDataTable(crossData);
                const options = {
                    chartArea: {width: '80%', height: '70%'},
                    isStacked: true,
                    legend: {position: 'top'},
                    colors: ['#2ecc71', '#f39c12', '#e74c3c'],
                    hAxis: {
                        title: 'Nombre de réclamations'
                    },
                    vAxis: {
                        title: 'Type de réclamation'
                    }
                };
                const chart = new google.visualization.BarChart(document.getElementById('typeSentimentChart'));
                chart.draw(data, options);
            }
        }

        // Fonction pour initialiser les graphiques Morris
        function initMorrisCharts() {
            console.log('Initialisation des graphiques Morris');
            
            // Graphique des demandes par statut
            if (document.getElementById('morris-donut-demande')) {
                new Morris.Donut({
                    element: 'morris-donut-demande',
                    data: {{ demande_stats|json_encode|raw }},
                    colors: ['#3AB5CE', '#1B3583', '#A8E0EA'],
                    resize: true
                });
            }
            
            // Graphique des offres par type de contrat
            if (document.getElementById('morris-bar-offre')) {
                new Morris.Bar({
                    element: 'morris-bar-offre',
                    data: {{ offre_stats|json_encode|raw }},
                    xkey: 'typeContrat',
                    ykeys: ['count'],
                    labels: ['Nombre d\'offres'],
                    colors: ['#3AB5CE'],
                    resize: true,
                    hideHover: 'auto'
                });
            }
            
            // Graphique de l'évolution des demandes
            if (document.getElementById('morris-bar-demande')) {
                new Morris.Bar({
                    element: 'morris-bar-demande',
                    data: {{ demande_timeline|json_encode|raw }},
                    xkey: 'month',
                    ykeys: ['count'],
                    labels: ['Demandes'],
                    colors: ['#3AB5CE'],
                    resize: true,
                    hideHover: 'auto'
                });
            }
        }

        // Fonction pour initialiser les graphiques Chart.js
        function initChartJsGraphs() {
            console.log('Initialisation des graphiques Chart.js');
            
            // Configuration globale de Chart.js
            Chart.defaults.responsive = true;
            Chart.defaults.maintainAspectRatio = false;
            
            // Graphique de statut des missions
            const missionStatusChart = document.getElementById('missionStatusChart');
            if (missionStatusChart) {
                const ctx = missionStatusChart.getContext('2d');
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: [{% for status, count in mission_stats %}'{{ status }}',{% endfor %}],
                        datasets: [{
                            data: [{% for status, count in mission_stats %}{{ count }},{% endfor %}],
                            backgroundColor: ['#4e73df', '#1cc88a', '#f6c23e', '#e74a3b', '#36b9cc']
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'right',
                                labels: {
                                    padding: 20
                                }
                            }
                        }
                    }
                });
            }
            
            // Graphique d'évolution des missions
            const missionTimelineChart = document.getElementById('missionTimelineChart');
            if (missionTimelineChart) {
                const ctx = missionTimelineChart.getContext('2d');
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: [{% for month, data in mission_timeline_data %}'{{ month }}',{% endfor %}],
                        datasets: [{
                            label: 'Créées',
                            data: [{% for month, data in mission_timeline_data %}{{ data.created }},{% endfor %}],
                            borderColor: '#4e73df',
                            backgroundColor: 'rgba(78, 115, 223, 0.1)',
                            fill: true
                        }, {
                            label: 'Terminées',
                            data: [{% for month, data in mission_timeline_data %}{{ data.completed }},{% endfor %}],
                            borderColor: '#1cc88a',
                            backgroundColor: 'rgba(28, 200, 138, 0.1)',
                            fill: true
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'top'
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            }
        }

        // Initialisation au chargement de la page
        document.addEventListener('DOMContentLoaded', function() {
            // Initialiser Morris.js
            if (typeof Morris !== 'undefined') {
                initMorrisCharts();
            }
            
            // Initialiser Chart.js
            if (typeof Chart === 'function') {
                initChartJsGraphs();
            }
            
            // Initialiser Google Charts
            google.charts.setOnLoadCallback(initGoogleCharts);
            
            // Gestion du redimensionnement
            let resizeTimeout;
            window.addEventListener('resize', function() {
                clearTimeout(resizeTimeout);
                resizeTimeout = setTimeout(function() {
                    if (typeof Morris !== 'undefined') {
                        Morris.Donut.prototype.redrawAll();
                        Morris.Bar.prototype.redrawAll();
                    }
                }, 250);
            });
        });
    </script>
{% endblock %}